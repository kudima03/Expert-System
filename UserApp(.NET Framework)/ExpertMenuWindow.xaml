<Window x:Class="UserApp_.NET_Framework_.ExpertMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserApp_.NET_Framework_"
        mc:Ignorable="d"
        Title="ExpertMenu" Height="430" Width="450">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="220"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="60"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1" FontWeight="Bold" Foreground="White" FontSize="30">Главная</TextBlock>
        <Button Style= "{DynamicResource ButtonStyleGoBack}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="0" Cursor="Hand" FontSize="40" Foreground="White" Content="«" x:Name="GoBack" Click="GoBack_Click" RenderTransformOrigin="0.5,0.5" MaxHeight="50" MaxWidth="30" Background="Transparent" BorderBrush="Transparent" Margin="0,-12,0,0"/>
        <Menu Style="{DynamicResource MenuStyle}" MinWidth="180" HorizontalAlignment="Left" MaxWidth="250" MaxHeight="170" Grid.Row="1" Grid.Column="1" Name="MainMenu">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Style="{DynamicResource MenuItemStyle}" Margin="0 4 0 0" Cursor="Hand" Header="Добавить т/с" Name="AddVehicle" Click="AddVehicle_Click"></MenuItem>
            <MenuItem Style="{DynamicResource MenuItemStyle}" Cursor="Hand" Header="Отредактировать т/с" Name="EditVehicle" Click="EditVehicle_Click"></MenuItem>
            <MenuItem Style="{DynamicResource MenuItemStyle}" Cursor="Hand" Header="Удалить т/с" Name="DeleteVehicle" Click="DeleteVehicle_Click"></MenuItem>
            <MenuItem Style="{DynamicResource MenuItemStyle}" Cursor="Hand" Header="Найти т/с по цвету" Name="FindVehicleWithColour" Click="FindVehicleWithColour_Click"></MenuItem>
            <MenuItem Style="{DynamicResource MenuItemStyle}" Cursor="Hand" Header="Найти т/с по дилеру" Name="FindVehicleWithDealer" Click="FindVehicleWithDealer_Click"></MenuItem>
            <MenuItem Style="{DynamicResource MenuItemStyle}" Cursor="Hand" Header="Найти т/с по модели" Name="FindVehicleWithModel" Click="FindVehicleWithModel_Click"></MenuItem>
            <MenuItem Style="{DynamicResource MenuItemStyle}" Cursor="Hand" Header="Найти т/с по рег. номеру" Name="FindVehicleWithRegistrationNumber" Click="FindVehicleWithRegistrationNumber_Click"></MenuItem>
            <MenuItem Style="{DynamicResource MenuItemStyle}" Margin="0 0 0 4" Cursor="Hand" Header="Найти т/с по рейтингу" Name="FindVehicleWithTotalRate" Click="FindVehicleWithTotalRate_Click"></MenuItem>

        </Menu>

    </Grid>
</Window>
